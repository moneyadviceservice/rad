
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="MAS Retirement Adviser Directory Administration">
  <meta name="author" content="Team A">
  <title>RAD Administration</title>
  <%= stylesheet_link_tag 'admin' %>
  <%= csrf_meta_tags %>
</head>

<body>

<!-- Fixed navbar -->
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/admin">RAD Administration</a>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if current_page?(controller: '/admin/pages', action: 'home') %>"><%= link_to 'Home', admin_root_path %></li>
        <li class="<%= 'active' if current_page?(controller: '/admin/firms') %>"><%= link_to 'Firms', admin_firms_path %></li>
        <li class="<%= 'active' if current_page?(controller: '/admin/advisers') %>"><%= link_to 'Advisers', admin_advisers_path %></li>
        <li class="<%= 'active' if current_page?(controller: '/admin/principals') %>"><%= link_to 'Principals', admin_principals_path %></li>
        <li class="<%= 'active' if current_page?(controller: '/admin/metrics') %>"><%= link_to 'Metrics', admin_metrics_path %></li>
        <li class="<%= 'active' if current_page?(controller: '/admin/lookup/firms') || current_page?(controller: '/admin/lookup/subsidiaries') %>">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Lookup Data <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Advisers', admin_lookup_advisers_path %></li>
            <li><%= link_to 'Firms', admin_lookup_firms_path %></li>
            <li><%= link_to 'Subsidiaries', admin_lookup_subsidiaries_path %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <%= yield %>
</div>

<footer class="footer">
  <div class="container">
    <p class="text-muted">Money Advice Service 2015</p>
  </div>
</footer>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<%= javascript_include_tag('admin') %>

</body>
</html>
