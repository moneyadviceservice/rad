
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="MAS Retirement Adviser Directory Administration">
  <meta name="author" content="Team A">
  <title>RAD Administration</title>
  <%= stylesheet_link_tag 'admin' %>
  <%= csrf_meta_tags %>
</head>

<body>

<!-- Fixed navbar -->
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/admin">RAD Administration</a>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <%= active_link_to 'Home', admin_root_path, active: :exact, wrap_tag: 'li' %>
        <%= active_link_to 'Firms', admin_firms_path, wrap_tag: 'li' %>
        <%= active_link_to 'Advisers', admin_advisers_path, wrap_tag: 'li' %>
        <%= active_link_to 'Principals', admin_principals_path, wrap_tag: 'li' %>

        <li class="<%= 'active' if is_active_link?('/admin/reports', :inclusive) %>">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Reports<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <%= active_link_to 'Metrics', admin_reports_metrics_path, wrap_tag: 'li' %>
          </ul>
        </li>

        <li class="<%= 'active' if is_active_link?('/admin/lookup', :inclusive) %>">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Lookup Data <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <%= active_link_to 'Advisers', admin_lookup_advisers_path, wrap_tag: 'li' %>
            <%= active_link_to 'Firms', admin_lookup_firms_path, wrap_tag: 'li' %>
            <%= active_link_to 'Subsidiaries', admin_lookup_subsidiaries_path, wrap_tag: 'li' %>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <% if flash.notice %>
    <div class="t-flash-message alert alert-warning" role="alert">
      <%= flash.notice %>
    </div>
  <% end %>

  <%= yield %>
</div>

<footer class="footer">
  <div class="container">
    <p class="text-muted">Money Advice Service 2015</p>
  </div>
</footer>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<%= javascript_include_tag('admin') %>

</body>
</html>
