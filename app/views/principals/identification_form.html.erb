<div class="l-constrained">
  <%= heading_tag(t('registration.heading'), level: 1, class: 'l-pre-qualification-questions__heading') %>

  <form class="l-pre-qualification-questions__section">
    <%= heading_tag(t('registration.firm.heading'), level: 2, class: 'l-pre-qualification-questions__question') %>

    <%= t('required') %>
    <div>
      <label><%= t('registration.firm.reference_number') %><input type="text" /></label>
      <label><%= t('registration.firm.website_address') %><input type="text" /></label>
    </div>

    <hr class="l-pre-qualification-questions__hr">

    <%= heading_tag(t('registration.principal_heading'), level: 2, class: 'l-pre-qualification-questions__question') %>

    <div>
      <label><%= t('registration.principal.first_name') %><input type="text" /></label>
      <label><%= t('registration.principal.last_name') %><input type="text" /></label>
      <label><%= t('registration.principal.job_title') %><input type="text" /></label>
      <label><%= t('registration.principal.email_address') %><input type="text" /></label>
      <label><%= t('registration.principal.telephone_number') %><input type="text" /></label>
      <div class="l-pre-qualification-questions__disclaimer">
        <input type="checkbox" class="l-pre-qualification-questions__checkbox"/>
        <label class="l-pre-qualification-questions__disclaimer-label"><%= t('registration.principal.disclaimer') %></label>
      </div>
    </div>
  </form>
</div>
