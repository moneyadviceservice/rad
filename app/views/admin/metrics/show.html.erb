<div class="row">
  <div class="col-xs-8">
    <h1>
      Snapshot
      <small><%= @snapshot.created_at.strftime('%e %B %Y') %></small>
    </h1>

    <p><%= link_to 'Download as CSV', download_admin_metric_path(@snapshot), class: 'btn btn-primary' %></p>
  </div>
</div>

<table class="table table-bordered table-striped t-table">
  <thead>
    <th>Metric</th>
    <th>Value</th>
  </thead>

  <tbody>
    <% @snapshot.metrics_in_order.each do |key| %>
      <tr>
        <td><%= t("snapshot.attributes.#{key}") %></td>
        <td><%= @snapshot[key] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
