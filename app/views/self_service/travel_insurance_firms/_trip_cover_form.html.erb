<%= f.fields_for :trip_covers, cover_data do |tc| %>
  <%= tc.hidden_field :trip_type %>
  <%= tc.hidden_field :cover_area %>

  <div class="l-3col-even-row">
    <div class="l-3col-even">
      <strong><%= t('self_service.travel_insurance_firms_edit.up_to_31_days')%></strong>
    </div>

    <div class="l-3col-even">
      <%= tc.label :land_30_days_max_age,
                  t('self_service.travel_insurance_firms_edit.maximum_age_non_cruise'),
                  class: 'form__label-heading' %>
      <%= tc.select :land_30_days_max_age, options_for_cover_ages, { prompt: 'Please select', include_blank: true }, { class: 't-one-month-land' } %>
    </div>

    <div class="l-3col-even">
      <%= tc.label :cruise_30_days_max_age,
                  t('self_service.travel_insurance_firms_edit.maximum_age_cruise'),
                  class: 'form__label-heading' %>
