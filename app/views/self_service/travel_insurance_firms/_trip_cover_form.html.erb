      <%= tc.select :land_45_days_max_age, options_for_cover_ages, { prompt: 'Please select', include_blank: true }, { class: 't-six-month-land' } %>
    </div>

    <div class="l-3col-even">
      <%= tc.label :cruise_45_days_max_age,
                  t('self_service.travel_insurance_firms_edit.maximum_age_cruise'),
                  class: 'form__label-heading' %>
      <%= tc.select :cruise_45_days_max_age, options_for_cover_ages, { prompt: 'Please select', include_blank: true }, { class: 't-six-month-cruise' } %>
