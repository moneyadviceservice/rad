  </div>
  <br />

  <div class="l-3col-even-row">
    <div class="l-3col-even">
      <strong><%= t('self_service.travel_insurance_firms_edit.up_to_55_days')%></strong>
    </div>

    <div class="l-3col-even">
      <%= tc.label :land_55_days_max_age,
                  t('self_service.travel_insurance_firms_edit.maximum_age_non_cruise'),
                  class: 'form__label-heading' %>
      <%= tc.select :land_55_days_max_age, options_for_cover_ages, { prompt: 'Please select', include_blank: true }, { class: 't-six-month-plus-land' } %>
    </div>

    <div class="l-3col-even">
      <%= tc.label :cruise_55_days_max_age,
                  t('self_service.travel_insurance_firms_edit.maximum_age_cruise'),
                  class: 'form__label-heading' %>
      <%= tc.select :cruise_55_days_max_age, options_for_cover_ages, { prompt: 'Please select', include_blank: true }, { class: 't-six-month-plus-cruise' } %>
    </div>
