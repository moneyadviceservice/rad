<%= f.fields_for :medical_specialism do |ms| %>
  <%= ms.form_row :specialised_medical_conditions_cover do %>
    <fieldset class="form__group">
      <%= ms.errors_for :specialised_medical_conditions_cover %>
      <%= ms.label :specialised_medical_conditions_cover,
                  t('self_service.travel_insurance_firms_edit.medical_specialism.specialised_medical_conditions_cover_label'),
                  class: 'form__label-heading' %>
      <%= ms.radio_button :specialised_medical_conditions_cover_select, 1, class: 'form__group-input  t-specialised-medical-conditions-yes', checked: ms.object.specialised_medical_conditions_cover.present?, data: { show_hide: 'data-specialised-conditions' } %>
      <%= t('registration.answer_yes') %>

      <%= ms.radio_button :specialised_medical_conditions_cover_select, 0, class: 'form__group-input  t-specialised-medical-conditions-no', checked: ms.object.specialised_medical_conditions_cover.nil?, data: { show_hide: 'data-specialised-conditions' } %>
      <%= t('registration.answer_no') %>
    </fieldset>

    <fieldset class="form__group t-specialised-medical-conditions-cover" data-specialised-conditions>
      <br/>
      <%= ms.select :specialised_medical_conditions_cover, t('self_service.travel_insurance_firms_edit.medical_specialism.medical_conditions_cover_select').invert, { prompt: 'Please select', include_blank: false } %>
    </fieldset>
  <% end %>

  <%= ms.form_row :likely_not_cover_medical_condition do %>
    <fieldset class="form__group">
      <%= ms.label :likely_not_cover_medical_condition,
                  t('self_service.travel_insurance_firms_edit.medical_specialism.likely_not_cover_medical_condition_label'),
                  class: 'form__label-heading' %>

      <%= ms.radio_button :likely_not_cover_medical_condition_select, 1, class: 'form__group-input t-not-covering-medical-condition-yes', checked: ms.object.likely_not_cover_medical_condition.present?, data: { show_hide: 'data-not-likely-cover ' } %>
      <%= t('registration.answer_yes') %>

      <%= ms.radio_button :likely_not_cover_medical_condition_select, 0, class: 'form__group-input t-not-covering-medical-condition-no', checked: ms.object.likely_not_cover_medical_condition.nil?, data: { show_hide: 'data-not-likely-cover ' } %>
      <%= t('registration.answer_no') %>
    </fieldset>

    <fieldset class="form__group t-not-covering-medical-condition-text" data-not-likely-cover>
      <%= ms.errors_for :likely_not_cover_medical_condition %>

      <br/>
      <%= ms.text_area :likely_not_cover_medical_condition %>
    </fieldset>
  <% end %>

  <%= ms.form_row :cover_undergoing_treatment do %>
    <fieldset class="form__group">
      <%= ms.label :cover_undergoing_treatment,
                  t('self_service.travel_insurance_firms_edit.medical_specialism.cover_undergoing_treatment_label'),
                class: 'form__label-heading' %>
      <%= ms.radio_button :cover_undergoing_treatment, 'true', class: 'form__group-input t-cover-undergoing-treatment-yes' %>
      <%= t('registration.answer_yes') %>

      <%= ms.radio_button :cover_undergoing_treatment, 'false', class: 'form__group-input t-cover-undergoing-treatment-no' %>
      <%= t('registration.answer_no') %>
    </fieldset>
  <% end %>

  <%= ms.form_row :terminal_prognosis_cover do %>
    <fieldset class="form__group">
      <%= ms.label :terminal_prognosis_cover,
                t('self_service.travel_insurance_firms_edit.medical_specialism.terminal_prognosis_cover_label'),
                class: 'form__label-heading' %>

      <%= ms.radio_button :terminal_prognosis_cover, 'true', class: 'form__group-input t-covers-terminal-prognosis-yes' %>
      <%= t('registration.answer_yes') %>

      <%= ms.radio_button :terminal_prognosis_cover, 'false', class: 'form__group-input t-covers-terminal-prognosis-no' %>
      <%= t('registration.answer_no') %>
    </fieldset>
  <% end %>
<% end %>
