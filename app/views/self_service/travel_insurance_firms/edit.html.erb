<% render_breadcrumbs(breadcrumbs_firm_edit) %>

<div class="l-back-link t-back-to-firm-list">
  <%= link_to '< Back to firm list', self_service_travel_insurance_firms_path %>
</div>

<h1 class="t-firm-name">
  <%= @firm.registered_name %>
</h1>
<%= form_for @firm,
             url: self_service_travel_insurance_firm_path(@firm),
             html: { class: 'l-travel-insurance-form' },
             builder: Dough::Forms::Builders::Validation do |f| %>

  <%= render partial: 'self_service/travel_insurance_firms/form', locals: { f: f } %>

<% end %>
